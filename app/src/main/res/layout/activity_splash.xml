<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAEAD2"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/txt_v"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/sansita_swashed_semibold"
        android:shadowColor="#B19586"
        android:shadowDx="6"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="DermaScan"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#451506"
        android:textSize="37sp"
        android:textStyle="bold|italic" />


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="149dp"
        android:layout_height="140dp"
        android:layout_above="@id/txt_v"
        android:layout_centerInParent="true"
        android:background="#003F51B5"
        android:elevation="10dp"
        android:src="@drawable/img_modified__1_" />


</RelativeLayout>